<h2>All Trainers</h2>
<nav>
  <a href="/trainers/new/">Add a Trainer</a>
  <a href=""> Add a Pokemon</a>
</nav>
<% @trainers.each do |trainer|%>
  <p class="trainer">
    <a href="./trainers/<%= trainer.id %>"><%= trainer.name %></a>
  </p>
  <p> Level: <%= trainer.level %></p>
  <img src="<%= trainer.img_url %>">
  <h2> Pokemon </h2>
  <% trainer.pokemons.each do |pokemon|%>
    <p class="pokemon">
      <a href="./pokemons/<%= pokemon.id %>"><%= pokemon.name %></a>
    </p>
  <% end %>
<% end %>
